<%= form_for comment , :url => "/forums/#{@forum.id}/topics/#{@topic.id}/comments" , :remote => true do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'write your comment' %><br />
    <%= f.text_area :description , :class => "txt-comnet"%>
  </div>
  <div class="actions">
    <%= f.submit  'Post', :id=> 'post'%>
  </div>
<% end %>


